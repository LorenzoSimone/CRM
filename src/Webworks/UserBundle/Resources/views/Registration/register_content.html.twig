{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-signin">
    <h2 class="form-signin-heading">{{ page_title }} <a href="{{ path('webworks_dashboard_index') }}"><small class="text-muted">| Webworks CRM</small></a></h2>

    {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}

    <p>&nbsp;</p>
    <button type="submit" class="btn btn-lg btn-block btn-primary">{{ 'registration.submit'|trans }}</button>
    <ul>
        <li>Schon registriert? <a href="{{ path('fos_user_security_login') }}">Hier anmelden</a></li>
        <li><a href="{{ path('fos_user_resetting_request') }}">Passwort vergessen?</a></li>
    </ul>
</form>
